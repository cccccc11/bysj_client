<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/themeColor">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="个人信息"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@color/themeColor"/>

        <TextView
            android:id="@+id/user_info_exit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="退出"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/user_info_head_iv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@mipmap/head_default_orange"/>
            <TextView
                android:id="@+id/user_info_name_title_tv"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cccj"
                android:textColor="@color/themeColor"
                android:textSize="30sp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/id_orange" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textSize="15sp"
                    android:textColor="@color/themeColor" />
                <TextView
                    android:id="@+id/user_info_id_tv"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="id"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/arrow_right_gray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/username" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="15sp"
                    android:textColor="@color/themeColor" />
                <TextView
                    android:id="@+id/user_info_name_tv"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:id="@+id/user_info_name_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/arrow_right_orange"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/phone_orange" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机"
                    android:textSize="15sp"
                    android:textColor="@color/themeColor" />
                <TextView
                    android:id="@+id/user_info_phone_tv"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:id="@+id/user_info_phone_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/arrow_right_orange"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/house_orange" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址"
                        android:textSize="15sp"
                        android:textColor="@color/themeColor" />
                    <TextView
                        android:id="@+id/user_info_address_tv"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/user_info_address_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/arrow_right_orange"/>
                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/cake_orange" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生日"
                        android:textSize="15sp"
                        android:textColor="@color/themeColor" />
                    <TextView
                        android:id="@+id/user_info_birthday_tv"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/user_info_birthday_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/arrow_right_orange"/>
                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/sex_orange" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textSize="15sp"
                        android:textColor="@color/themeColor" />
                    <TextView
                        android:id="@+id/user_info_sex_tv"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/user_info_sex_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/arrow_right_orange"/>
                </LinearLayout>

            </LinearLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/user_info_change_password_tv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="修改密码"
                    android:textColor="@color/themeColor"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:background="@drawable/rectangle"/>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>