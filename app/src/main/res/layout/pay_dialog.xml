<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="15dp"
>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="支付"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/themeColor"
        android:background="@color/white"
        android:layout_marginBottom="2dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="50dp"
        >

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/pay_frame"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/pay_password_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:gravity="center"
                android:textColor="@color/black"
                android:text=""
                android:textSize="48sp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"/>
            <TextView
                android:id="@+id/pay_password_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="48sp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"/>
            <TextView
                android:id="@+id/pay_password_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="48sp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"/>
            <TextView
                android:id="@+id/pay_password_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="48sp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"/>
            <TextView
                android:id="@+id/pay_password_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="48sp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"/>
            <TextView
                android:id="@+id/pay_password_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="48sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:background="@drawable/pay_frame"
            android:layout_marginTop="50dp"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="350dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/pay_input_1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:background="@drawable/paydialog_input_selector"
                    android:text="1"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"/>

                <TextView
                    android:id="@+id/pay_input_2"
                    android:layout_weight="1"
                    android:background="@drawable/paydialog_input_selector"

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="2"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"/>

                <TextView
                    android:id="@+id/pay_input_3"
                    android:layout_weight="1"
                    android:background="@drawable/paydialog_input_selector"

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="3"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"/>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/pay_input_4"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="4"
                    android:background="@drawable/paydialog_input_selector"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"/>

                <TextView
                    android:id="@+id/pay_input_5"
                    android:layout_weight="1"
                    android:background="@drawable/paydialog_input_selector"

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="5"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"/>

                <TextView
                    android:id="@+id/pay_input_6"
                    android:layout_weight="1"
                    android:background="@drawable/paydialog_input_selector"

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="6"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"/>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/pay_input_7"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/paydialog_input_selector"

                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="7"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"/>

                <TextView
                    android:id="@+id/pay_input_8"
                    android:layout_weight="1"
                    android:background="@drawable/paydialog_input_selector"

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"/>

                <TextView
                    android:id="@+id/pay_input_9"
                    android:layout_weight="1"
                    android:background="@drawable/paydialog_input_selector"

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="9"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"/>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:background="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"/>

                <TextView
                    android:id="@+id/pay_input_0"
                    android:layout_weight="1"
                    android:background="@drawable/paydialog_input_selector"

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="0"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"/>

                <TextView
                    android:id="@+id/pay_input_delete"
                    android:layout_weight="1"
                    android:background="@drawable/paydialog_input_selector"

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="退格" />

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>



</LinearLayout>