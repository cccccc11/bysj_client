<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@color/white"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入您的新手机号码:"
        android:textSize="20sp"
        android:textColor="@color/themeColor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/shop_info_dialog_yzm_ed"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:hint="输入验证码"
            android:textColorHint="@color/gray"
            android:theme="@style/AppTheme"/>
        <TextView
            android:id="@+id/shop_info_dialog_yzm_tv"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="获取验证码"
            android:textColor="@color/themeColor"/>
    </LinearLayout>

    <EditText
        android:id="@+id/shop_info_dialog_phone_ed"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColorHint="@color/gray"
        android:hint="输入您的手机"
        android:theme="@style/AppTheme"
        android:inputType="phone"
        android:maxLength="11"/>



    <Button
        android:id="@+id/shop_info_dialog_commit"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="确认"
        android:layout_marginLeft="200dp"
        android:background="@drawable/button_cycle_selector"/>
</LinearLayout>