<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/register_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/themeColor"
        >
        <ImageView
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/arrow_left_white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="注册"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/register_head"
        android:id="@+id/register_username_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <TextView
            android:id="@+id/register_newUserName_tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="用户名:"
            android:width="90dp"
            android:textSize="20sp"
            android:textColor="@color/themeColor"
            android:theme="@style/AppTheme"
            android:paddingTop="1dp"
            android:gravity="center"
/>
        <EditText
            android:id="@+id/register_newUserName_ed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:theme="@style/AppTheme"
            android:hint="以数字、字母和下划线组成"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_"
            android:textColorHint="@color/themeColor"
            android:layout_toRightOf="@id/register_newUserName_tv"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/register_username_alert"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:gravity="right"
            android:text=""
            android:textColor="@color/red"
            android:layout_below="@id/register_newUserName_ed"/>
    </RelativeLayout>

    <RelativeLayout


        android:id="@+id/register_password_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/register_username_rl">
        <TextView
            android:id="@+id/register_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="密码:"
            android:width="90dp"
            android:textSize="20sp"
            android:textColor="@color/themeColor"
            android:theme="@style/AppTheme"
            android:paddingTop="1dp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/register_password_ed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:theme="@style/AppTheme"
            android:hint="以数字、字母和符号组成"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_!@#$%*"
            android:textColorHint="@color/themeColor"
            android:layout_toRightOf="@id/register_password_tv"
            android:maxLines="1"
            android:inputType="textPassword"
            />
        <TextView
            android:id="@+id/register_password_alert"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:gravity="right"
            android:text=""
            android:textColor="@color/red"
            android:layout_below="@id/register_password_ed"/>
    </RelativeLayout>

    <RelativeLayout


        android:id="@+id/register_passwordAgain_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/register_password_rl">
        <TextView
            android:id="@+id/register_passwordAgain_tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="确认密码:"
            android:width="90dp"
            android:textSize="20sp"
            android:textColor="@color/themeColor"
            android:theme="@style/AppTheme"
            android:paddingTop="1dp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/register_passwordAgain_ed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:theme="@style/AppTheme"
            android:hint="重复密码"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_!@#$%*"
            android:textColorHint="@color/themeColor"
            android:layout_toRightOf="@id/register_passwordAgain_tv"
            android:maxLines="1"
            android:inputType="textPassword"
            />
        <TextView
            android:id="@+id/register_passwordAgain_alert"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:gravity="right"
            android:text=""
            android:textColor="@color/red"
            android:layout_below="@id/register_passwordAgain_ed"/>
    </RelativeLayout>

    <RelativeLayout


        android:id="@+id/register_phone_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_type_rl"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/register_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="手机号:"
            android:width="90dp"
            android:textSize="20sp"
            android:textColor="@color/themeColor"
            android:theme="@style/AppTheme"
            android:paddingTop="1dp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/register_phone_ed"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:theme="@style/AppTheme"
            android:hint="手机号码"
            android:textColorHint="@color/themeColor"
            android:layout_toRightOf="@id/register_phone_tv"
            android:maxLines="1"
            android:maxLength="11"
            android:inputType="phone"
            />

        <TextView
            android:id="@+id/register_getPhoneYZM_tv"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/register_phone_ed"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="获取验证码"
            android:textColor="@color/themeColor"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout


        android:id="@+id/register_yzm_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_phone_rl"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >

        <TextView
            android:id="@+id/register_yzm_tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="验证码:"
            android:width="90dp"
            android:textSize="20sp"
            android:textColor="@color/themeColor"
            android:theme="@style/AppTheme"
            android:paddingTop="1dp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/register_yzm_ed"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:theme="@style/AppTheme"
            android:hint="验证码"
            android:textColorHint="@color/themeColor"
            android:layout_toRightOf="@id/register_yzm_tv"
            android:maxLines="1"
            android:maxLength="6"
            />
        <ImageView
            android:id="@+id/register_yzm_iv"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/register_yzm_ed"
            />
    </RelativeLayout>

    <RelativeLayout


        android:id="@+id/register_type_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_passwordAgain_rl"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/register_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="注册类型:"
            android:width="90dp"
            android:textSize="20sp"
            android:textColor="@color/themeColor"
            android:theme="@style/AppTheme"
            android:paddingTop="1dp"
            android:gravity="center"
            />
        <RadioGroup
            android:id="@+id/register_type_rg"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            >
            <RadioButton
                android:id="@+id/register_type_user_rb"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户"
                android:checked="true"
                android:background="@drawable/register_type_selector"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/register_type_shop_rb"
                android:button="@null"
                android:background="@drawable/register_type_selector"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团长"
                android:textColor="@color/themeColor"
                android:textSize="20sp"/>
        </RadioGroup>
    </RelativeLayout>

    <Button
        android:id="@+id/register_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/register_yzm_rl"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/button_cycle_selector"
        android:text="注册"
        android:textColor="@color/white"
        />
</RelativeLayout>