<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/gray"
android:orientation="vertical"
tools:context=".CommodityInfo">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/themeColor">
    <ImageView
        android:id="@+id/user_main_info_exit_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/arrow_left_white"/>
</RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/user_main_info_photo"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/user_main_info_photo_num"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="10sp"
                />

        </RelativeLayout>


        <!--价钱-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/rmb"
                android:layout_marginStart="15dp"/>
            <TextView
                android:id="@+id/user_main_info_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/themeColor"
                android:textSize="30sp"
                />
        </LinearLayout>

<!--        商品名字-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/user_main_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名字"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:maxLines="2"
                android:textColor="@color/themeColor"
                android:textSize="30sp"
                />
        </LinearLayout>

        <!--商家名字-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/shop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家"
                android:layout_marginLeft="5dp"
                android:maxLines="2"
                android:textColor="@color/themeColor"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/user_main_info_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shopName"
                android:layout_marginLeft="5dp"
                android:maxLines="2"
                android:textColor="@color/themeColor"
                android:textSize="20sp"
                />
        </LinearLayout>

        <!--参与人数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/number"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已团购:"
                android:textColor="@color/themeColor"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/user_main_info_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50/90"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:maxLines="2"
                android:textColor="@color/themeColor"
                android:textSize="20sp"
                />
        </LinearLayout>



        <!--开始时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/date"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间:"
                android:textColor="@color/themeColor"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/user_main_info_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/themeColor"
                android:layout_marginLeft="15dp"

                android:textSize="20sp"
                />
        </LinearLayout>
        <!--结束时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/date"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间:"
                    android:textColor="@color/themeColor"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/user_main_info_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/themeColor"
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/user_main_info_addnums_ll"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="选择数量:"
                android:textSize="20sp"
                android:textColor="@color/themeColor"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/user_main_info_addnums"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/themeColor"
                android:gravity="center"
                android:textSize="15sp"
                android:inputType="number"
                android:theme="@style/AppTheme"
                />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品介绍:"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:maxLines="2"
                android:textColor="@color/themeColor"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/user_main_info_introduce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shop_radio_checked"
                android:gravity="top"
                android:maxLines="10"
                android:minLines="10"
                android:padding="10dp"
                android:textColorHint="@color/themeColor"
                android:theme="@style/AppTheme" />

        </LinearLayout>

    </LinearLayout>




</ScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/user_main_info_top_gray"
    android:gravity="right"
    android:paddingTop="7dp"
    android:orientation="horizontal"
    >

        <TextView
            android:id="@+id/user_main_info_add_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入购物车"
            android:textColor="@color/themeColor"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/user_main_info_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入团购"
            android:textColor="@color/themeColor"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"/>

</LinearLayout>
</LinearLayout>